<div class='page'>
  {{#with header}}
    <div class='header'>
      <header class='header__content'>
        <div class='header__block'>
          <img
            src='/img/svg/apple.svg'
            alt='apple_icon'
            class='header__icon' />
          <nav class='header__block'>
            {{#each links}}
              <a
                href='{{url}}'
                class='header__link'>{{text}}</a>
            {{/each}}
          </nav>
        </div>

        <div class='header__block'>
          <img
            src='/img/svg/search.svg'
            alt='search_icon'
            class='header__icon' />
          <img
            src='/img/svg/shop.svg'
            alt='shop_icon'
            class='header__icon' />
        </div>
      </header>
    </div>
    <div class='subheader'>
      <div class="header__content">
      {{#with ad}}
        <div class='header__block'>
          <p class="adv__title">{{title}}</p>
        </div>

        <div class='header__block'>
          <a href="{{link.url}}" class="adv__link">{{link.text}}</a>
        </div>
      {{/with}}
      </div>
    </div>
  {{/with}}

  {{#with iphone_pro}}
    <section class='product product--big product--iphone-pro product--dark'>
      <div class='product__content'>
        <h1 class='product__title'>{{title}}</h1>
        <p class='product__description'>{{descriptions}}</p>
        <div class='product__action'>
          {{#with link}}
            {{#each text}}
              <a href='{{../link}}' class='product__link'>{{this}}</a>
            {{/each}}
          {{/with}}
        </div>
      </div>
    </section>
  {{/with}}

